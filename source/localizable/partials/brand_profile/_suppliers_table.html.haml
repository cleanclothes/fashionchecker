.row.mt-5.template
  .col-sm-12.text-center
    %h4
      = t('suppliers_table.explore_supply_chain')
    %p
      &nbsp;
    %span.float-right.text-muted

    #suppliersTableContainer.table-responsive
      %table#suppliersTable.table.table-sm.light-blue-bg.medium-grey
        %thead
          %tr.white-bg.table-borderless.text-center
            %th.navy-bg.lighter-blue{colspan: 2}
              = t('suppliers_table.sourcing_from_factories')
            %th{colspan: 2}= t('suppliers_table.wage')
            %th{colspan: 3}= t('suppliers_table.workers')
          %tr.secondHeader.light-blue-bg.border-top-0.border-bottom-2
            %th.medium-blue-bg= t('suppliers_table.company')
            %th.medium-blue-bg= t('country')

            %th
              %i.fa.fa-coins
            %th
              %i.fa.fa-adjust

            %th
              %i.fa.fa-users
            %th
              %i.fa.fa-female
            %th
              %i.fa.fa-file-contract
        %tbody
