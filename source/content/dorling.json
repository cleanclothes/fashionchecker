{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A Dorling cartogram depicting U.S. state obesity rates.",
  "width": 900,
  "height": 520,
  "autosize": "none",

  "config": {
    "legend": {
      "gradientDirection": "horizontal",
      "gradientLength": 120,
      "gradientThickness": 10
    }
  },

  "data": [
    {
      "name": "country_codes",
      "_comment": "from https://github.com/lukes/ISO-3166-Countries-with-Regional-Codes (slim2)",
      "url": "http://localhost:4567/content/country_codes.json"
    },
    {
      "name": "answers",
      "url": "http://localhost:4567/content/jack_suppliers.json"
    },
    {
      "name": "companies",
      "source": "answers",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.metric == 6126450"
        },
        {
          "type": "formula",
          "expr": "datum.value == 'Vietnam' ? 'Viet Nam' : datum.value",
          "as": "country"
        }
      ]
    },

    {
      "name": "topo",
      "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
      "format": {"type": "topojson", "feature": "countries"}
    },
    {
      "name": "company_counts",
      "source": "companies",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["country"],
          "fields": ["company"],
          "ops": ["count"]
        },
        {
          "type": "lookup",
          "from": "country_codes",
          "key": "name",
          "fields": ["country"],
          "values": ["country-code"]
        },
        {
          "type": "lookup",
          "from": "topo",
          "key": "id",
          "fields": ["country-code"],
          "as": ["geo"]
        },
        {
          "type": "filter",
          "expr": "datum.geo"
        },
        {
          "type": "formula", "as": "centroid",
          "expr": "geoCentroid('projection', datum.geo)"
        }
      ]
    }
  ],

  "projections": [
    {
      "name": "projection",
      "type": "equirectangular",
      "translate": [{"signal": "width / 2"}, {"signal": "height / 2"}]
    }
  ],

  "scales": [
    {
      "name": "size",
      "domain": {"data": "company_counts", "field": "company_count"},
      "zero": false,
      "range": [1000, 5000]
    },
    {
      "name": "color",
      "type": "linear",
      "nice": true,
      "domain": {"data": "company_counts", "field": "company_count"},
      "range": "ramp"
    }
  ],



  "marks": [
    {
      "name": "circles",
      "type": "symbol",
      "from": {"data": "company_counts"},
      "encode": {
        "enter": {
          "size": {"scale": "size", "field": "company_count"},
          "fill": {"scale": "color", "field": "company_count"},
          "stroke": {"value": "green"},
          "strokeWidth": {"value": 1.5},
          "x": {"field": "centroid[0]"},
          "y": {"field": "centroid[1]"},
          "tooltip": {"signal": "'Obesity Rate: ' + format(datum.company_count, '.1%')"}
        }
      },
      "transform": [
        {
          "type": "force",
          "static": true,
          "forces": [
            {"force": "collide", "radius": {"expr": "1 + sqrt(datum.size) / 2"}},
            {"force": "x", "x": "datum.centroid[0]"},
            {"force": "y", "y": "datum.centroid[1]"}
          ]
        }
      ]
    },
    {
      "type": "text",
      "interactive": false,
      "from": {"data": "circles"},
      "encode": {
        "enter": {
          "align": {"value": "center"},
          "baseline": {"value": "middle"},
          "fontSize": {"value": 13},
          "fontWeight": {"value": "bold"},
          "text": {"field": "datum.country"}
        },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"}
        }
      }
    }
  ]
}
